model User {
  id        Int             @id @default(autoincrement())
  username  String
  firstName String
  lastName  String
  email     String          @unique
  firebaseUid  String       @unique

  pomodoros PomodoroTimer[]
}

model PomodoroTimer {
  id       Int  @id @default(autoincrement())
  pomodoro Int
  short    Int
  long     Int
  userId   Int
  user     User @relation(fields: [userId], references: [id])
}
